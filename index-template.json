{
  "index_patterns": [
      "waf-logs-*"
  ],
  "template": {
      "settings": {
          "number_of_shards": 1
      },
      "mappings": {
          "dynamic_templates": [
              {
                  "string_fields": {
                      "match_mapping_type": "string",
                      "mapping": {
                          "norms": false,
                          "type": "text",
                          "fields": {
                              "keyword": {
                                  "ignore_above": 1024,
                                  "type": "keyword"
                              }
                          }
                      }
                  }
              }
          ],
          "_source": {
              "enabled": true
          },
          "properties": {
              "geoip.location": {
                  "type": "geo_point"
              },
              "clientIp": {
                  "type": "ip"
              },
              "serverIp": {
                  "type": "ip"
              },
              "requestStatus": {
                  "type": "integer"
              },
              "responseCode": {
                  "type": "integer"
              }
          }
      },
      "aliases": {
          "mydata": {}
      }
  },
  "priority": 10
}
